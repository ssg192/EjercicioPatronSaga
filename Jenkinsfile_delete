pipeline {
    agent any
    tools {
        maven 'M3_9_9'
    }
    stages {
        
        stage('Ingress') {
            steps {
                dir("Deployment/"){
                    withCredentials([file(credentialsId: 'LOCALCONFIG', variable: 'LOCALCONFIG')]) {
                        sh 'kubectl --kubeconfig=$LOCALCONFIG --context=docker-desktop delete -f nginx_ingress_services.yaml'
                    }
                }
            }
        }

        stage('Orders') {
            steps {
