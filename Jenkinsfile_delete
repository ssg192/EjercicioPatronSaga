                    withCredentials([file(credentialsId: 'LOCALCONFIG', variable: 'LOCALCONFIG')]) {
                        sh 'kubectl --kubeconfig=$LOCALCONFIG --context=docker-desktop delete -f Payment-deployment.yaml'
                    }
                }
            }
        }

