                    withCredentials([file(credentialsId: 'LOCALCONFIG', variable: 'LOCALCONFIG')]) {
                        sh 'kubectl --kubeconfig=$LOCALCONFIG --context=docker-desktop delete -f secrets.yaml'
                    }
                }
            }
        }

        stage('Kubeconfig') {
            steps {
                dir("Deployment/"){
                    withCredentials([file(credentialsId: 'LOCALCONFIG', variable: 'LOCALCONFIG')]) {
